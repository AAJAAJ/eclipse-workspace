<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="cn.yunhe.dao.IOrderDao">
	
	<resultMap type="order" id="queryOrderInfosMap">
		<id column="order_id" property="order_id"/>
		<result column="create_time" property="create_time"/>
		<result column="send_phone" property="send_phone"/>
		<!-- select:用于执行另一个SQL 值:namespace的值+另一个SQL的id值 -->
		<association property="user" javaType="user" 
			select="cn.yunhe.dao.IUserDao.findUserById" column="uid">
		</association>
	</resultMap>
	
	<!-- 查询订单信息 -->
	<select id="queryOrderInfos" resultMap="queryOrderInfosMap">
		select * from t_order
	</select>
	
</mapper>